{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "dependencyDashboardLabels": ["dependencies"],
  "extends": ["workarounds:all"],
  "packageRules": [
    {
      "labels": ["dependencies"],
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump",
      "reviewers": ["3846masa"],
      "schedule": ["after 8:00 pm"],
      "semanticCommitType": "chore",
      "semanticCommits": "enabled"
    },
    {
      "automerge": true,
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "semanticCommitScope": "github-actions",
      "semanticCommitType": "ci"
    },
    {
      "matchManagers": ["npm"],
      "minimumReleaseAge": "3 days",
      "postUpdateOptions": ["pnpmDedupe"],
      "semanticCommitScope": "npm",
      "semanticCommitType": "chore"
    },
    {
      "extends": ["group:monorepos"],
      "matchManagers": ["npm"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["npm"],
      "semanticCommitScope": "npm",
      "semanticCommitType": "fix"
    },
    {
      "enabled": false,
      "matchDepTypes": ["peerDependencies"],
      "matchManagers": ["npm"]
    },
    {
      "automerge": true,
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": false,
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"]
    },
    {
      "automerge": true,
      "matchDepNames": ["/^@types\\//"],
      "matchManagers": ["npm"],
      "minimumReleaseAge": null
    },
    {
      "enabled": false,
      "matchDepNames": ["@types/node"],
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"]
    },
    {
      "enabled": false,
      "matchDepTypes": ["engines"],
      "matchManagers": ["npm"]
    },
    {
      "automerge": true,
      "matchDepNames": ["@3846masa/configs"],
      "matchManagers": ["npm"],
      "minimumReleaseAge": null,
      "schedule": ["at any time"]
    },
    {
      "allowedVersions": "^20.0.0",
      "groupName": "Node.js",
      "groupSlug": "node",
      "matchManagers": ["nvm", "nodenv"],
      "semanticCommitScope": "node",
      "semanticCommitType": "chore"
    },
    {
      "allowedVersions": "^20.0.0",
      "extends": ["group:nodeJs"],
      "groupName": "Node.js",
      "groupSlug": "node",
      "semanticCommitScope": "node",
      "semanticCommitType": "chore"
    }
  ],
  "printConfig": true,
  "timezone": "Asia/Tokyo"
}
