{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["dependencies"],
  "npm": {
    "extends": ["group:monorepos"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "semanticCommitScope": "github-actions",
      "semanticCommitType": "ci"
    },
    {
      "matchManagers": ["npm"],
      "postUpdateOptions": ["yarnDedupeHighest"],
      "semanticCommitScope": "npm",
      "semanticCommitType": "chore",
      "stabilityDays": 3
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["npm"],
      "semanticCommitScope": "npm",
      "semanticCommitType": "fix"
    },
    {
      "enabled": false,
      "matchDepTypes": ["peerDependencies"],
      "matchManagers": ["npm"]
    },
    {
      "automerge": true,
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": false,
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"]
    },
    {
      "automerge": true,
      "matchManagers": ["npm"],
      "matchPackagePrefixes": ["@types/"],
      "stabilityDays": 0
    },
    {
      "enabled": false,
      "matchManagers": ["npm"],
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"]
    },
    {
      "enabled": false,
      "matchDepTypes": ["engines"],
      "matchManagers": ["npm"]
    },
    {
      "automerge": true,
      "matchManagers": ["npm"],
      "matchPackageNames": ["@3846masa/configs"],
      "schedule": ["at any time"],
      "stabilityDays": 0
    },
    {
      "groupName": "Node.js",
      "major": false,
      "matchDatasources": ["docker", "node"],
      "matchPackagePatterns": ["^node$", "/node$"],
      "semanticCommitScope": "node",
      "semanticCommitType": "chore"
    }
  ],
  "rangeStrategy": "bump",
  "reviewers": ["3846masa"],
  "schedule": ["after 8:00 pm"],
  "semanticCommitType": "chore",
  "semanticCommits": "enabled",
  "timezone": "Asia/Tokyo"
}
