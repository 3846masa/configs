{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "github-actions": {
    "automerge": true,
    "pinDigests": true,
    "semanticCommitScope": "github-actions",
    "semanticCommitType": "ci",
    "semanticCommits": "enabled"
  },
  "labels": ["dependencies"],
  "npm": {
    "packageRules": [
      {
        "matchDepTypes": ["dependencies"],
        "semanticCommitScope": "npm",
        "semanticCommitType": "fix"
      },
      {
        "enabled": false,
        "matchDepTypes": ["peerDependencies"]
      },
      {
        "automerge": true,
        "matchUpdateTypes": ["minor", "patch"]
      },
      {
        "automerge": false,
        "matchUpdateTypes": ["major"]
      },
      {
        "automerge": true,
        "matchPackagePrefixes": ["@types/"],
        "stabilityDays": 0
      },
      {
        "enabled": false,
        "matchPackageNames": ["@types/node"],
        "matchUpdateTypes": ["major"]
      },
      {
        "enabled": false,
        "matchDepTypes": ["engines"]
      }
    ],
    "postUpdateOptions": ["yarnDedupeHighest"],
    "semanticCommitScope": "npm",
    "semanticCommitType": "chore",
    "semanticCommits": "enabled",
    "stabilityDays": 3
  },
  "packageRules": [
    {
      "automerge": true,
      "matchPackageNames": ["@3846masa/configs"],
      "postUpdateOptions": ["yarnDedupeHighest"],
      "schedule": ["at any time"],
      "stabilityDays": 0
    }
  ],
  "rangeStrategy": "bump",
  "regexManagers": [
    {
      "currentValueTemplate": "main",
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "@3846masa/configs",
      "fileMatch": ["^package.json$"],
      "lookupNameTemplate": "https://github.com/3846masa/configs.git",
      "matchStrings": ["\"@3846masa/configs\": \"github:3846masa/configs#(?<currentDigest>.*?)\""]
    }
  ],
  "reviewers": ["3846masa"],
  "schedule": ["after 8:00 pm"],
  "timezone": "Asia/Tokyo"
}
